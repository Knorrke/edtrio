type User {
  id: ID! @unique
  name: String!
  isTeacher: Boolean!
  createdAt: DateTime!
  updatedAt: DateTime!
  schulCloudId: String
}

type Document {
  id: ID! @unique
  value: Json!
  users: [User!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  answers: [MultipleChoiceAnswer]
}

type MultipleChoiceAnswer {
  id: ID! @unique
  isCorrect: Boolean!
  createdAt: DateTime!
  updatedAt: DateTime!
  submissions: [MultipleChoiceSubmission]
}

type MultipleChoiceSubmission {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  author: User!
  isChecked: Boolean!
  answer: MultipleChoiceAnswer!
}
